env# ========================================
# Gate.io API Credentials
# ========================================
# Получить на: https://www.gate.io/myaccount/apiv4keys
GATE_API_KEY=your_api_key_here
GATE_API_SECRET=your_api_secret_here

# ========================================
# Gate.io API Endpoints
# ========================================
# Для production используйте:
GATE_API_URL=https://api.gateio.ws
GATE_WS_URL=wss://api.gateio.ws/ws/v4/

# Для testnet используйте:
# GATE_API_URL=https://fx-api-testnet.gateio.ws
# GATE_WS_URL=wss://fx-api-testnet.gateio.ws/ws/v4/

# ========================================
# Торговые настройки
# ========================================
# Торговая пара (обязательно!)
SYMBOL=ETH_USDT

# Глубина стакана (количество уровней цен)
ORDERBOOK_DEPTH=20

# ========================================
# WebSocket Server (для клиентов)
# ========================================
# Порт для подключения клиентских приложений
WS_SERVER_PORT=8080

# ========================================
# База данных SQLite
# ========================================
# Путь к файлу базы данных
DB_PATH=./dtrader.db

# Сохранять OrderBook Pressure каждый N-й расчёт (рекомендуется 10)
DB_ORDERBOOK_PRESSURE_INTERVAL=10

# Автоматическое удаление данных старше N дней (0 = не удалять)
DB_RETENTION_DAYS=0

# ========================================
# Режим работы
# ========================================
# production - боевой режим
# development - режим разработки (больше логов)
# testnet - тестовая сеть Gate.io
MODE=development

# ========================================
# Логирование
# ========================================
# Уровни: debug | info | warn | error
LOG_LEVEL=info

# Сохранять логи в файл? (true/false)
LOG_TO_FILE=false

# Путь к папке с логами (если LOG_TO_FILE=true)
LOG_DIR=./logs

# ========================================
# Event Bus
# ========================================
# Максимальное количество слушателей на одно событие
EVENT_BUS_MAX_LISTENERS=100

# ========================================
# Timeframes Settings (TVP Strategy)
# ========================================
# Высший таймфрейм (минуты) - Главнокомандующий
HTF_TIMEFRAME=24

# Средний таймфрейм (минуты) - Генерал
MTF_TIMEFRAME=6

# Младший таймфрейм - Снайпер (ticks)
LTF_TIMEFRAME=ticks
